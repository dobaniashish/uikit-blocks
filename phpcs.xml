<?xml version="1.0"?>
<ruleset name="uikit-blocks">
	<description>Coding standards for uikit-blocks</description>

	<arg name="extensions" value="php"/>

	<file>./uikit-blocks.php</file>
	<file>./blocks</file>
	<file>./includes</file>

	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>./*.asset.php$</exclude-pattern>
	<exclude-pattern>/stubs/*</exclude-pattern>

	<rule ref="WordPress"></rule>
</ruleset>
